{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target":"ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop":true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true
  },
  "include": [
    "src/*.ts",
    "typings"
  ],
}
